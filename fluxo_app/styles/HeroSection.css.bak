/* Caminho: fluxo_app/styles/ ajustado */
/* Estilos para o componente HeroSection */

/* Header com azul sólido e cantos arredondados */
.hero-header {
  background-color: #2563eb; /* azul-600 do Tailwind */
  padding: 3rem 1rem;
}

/* Container para os veículos lado a lado */


/* Estilo para cada veículo: */


/* Imagem dos veículos */
.vehicle-image {
  height: auto;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Tarja verde com cantos arredondados */
.search-section {
  background-color: #10b981; /* verde-500 do Tailwind */
  border-radius: 0.5rem;
  padding: 3rem 1rem;
}

/* Formulário de busca */
.search-form {
  background-color: white;
  border-radius: 1rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  padding: 2rem;
}

/* Responsividade para dispositivos móveis */
@media (max-width: 768px) {
  
  
  
}

/* Espaço entre seções */
.section-spacer {
  margin: 3rem 0;
  text-align: center;
}

.section-spacer img {
  max-width: 100%;
  height: auto;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}
