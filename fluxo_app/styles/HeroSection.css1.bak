/* HeroSection.css - Versão Modificada até antes de separar a logo.png 20px da margem. */

/* Header com logo e texto lado a lado */
.hero-header {
  background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
  padding: 2rem 0;
  border-radius: 0 0 2rem 2rem;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.logo-image {
  width: 200px;
  height: auto;
  flex-shrink: 0;
}

.header-text {
  flex: 1;
}

.hero-title {
  font-size: 3rem;
  font-weight: bold;
  color: white;
  margin-bottom: 1rem;
}

.hero-subtitle {
  font-size: 1.25rem;
  color: white;
  font-weight: bold;
}

/* Seção Uma Proposta Ganha-Ganha */
.ganha-ganha-section {
  padding: 3rem 0;
  background-color: #f8fafc;
}

.ganha-ganha-content {
  display: flex;
  align-items: center;
  gap: 3rem;
  max-width: 1200px;
  margin: 0 auto;
}

.ganha-ganha-text {
  flex: 1;
}

.section-title {
  font-size: 2.5rem;
  font-weight: bold;
  color: #1e40af;
  margin-bottom: 1rem;
}

.section-subtitle {
  font-size: 1.5rem;
  font-weight: bold;
  color: #1e40af;
  margin-bottom: 1.5rem;
}

.section-description {
  font-size: 1.125rem;
  color: #374151;
  line-height: 1.6;
}

/* Grid de veículos */
.vehicles-grid {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

.vehicle-image {
  width: 180px;
  height: auto;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

/* Seção Verde "Começar Agora" */
.comecar-agora-section {
  background-color: #10b981;
  padding: 3rem 1rem;
}

.comecar-agora-title {
  font-size: 3rem;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 2rem;
}

/* Container do formulário com fundo branco */
.busca-form-container {
  max-width: 72rem;
  margin: 0 auto;
  background-color: white;
  border-radius: 1rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  padding: 2rem;
}

/* Formulário de busca */
.busca-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Grid dos campos - 3 colunas no desktop */
.form-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr 1fr 1fr;
  }
}

/* Seção do mascote */
.mascot-section {
  padding: 3rem 0;
  background-color: #f8fafc;
}

.mascot-image {
  width: 250px;
  height: auto;
}

/* Rodapé */
.footer {
  background-color: #1f2937;
  color: white;
  padding: 3rem 0 1rem;
}

.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-column h4 {
  font-size: 1.25rem;
  font-weight: bold;
  margin-bottom: 1rem;
  color: #10b981;
}

.footer-links {
  list-style: none;
  padding: 0;
}

.footer-links li {
  margin-bottom: 0.5rem;
}

.footer-links a {
  color: #d1d5db;
  text-decoration: none;
  transition: color 0.2s;
}

.footer-links a:hover {
  color: #10b981;
}

.footer-bottom {
  border-top: 1px solid #374151;
  padding-top: 1rem;
  text-align: center;
  color: #9ca3af;
}

/* Responsividade */
@media (max-width: 768px) {
  .header-content {
    flex-direction: column;
    text-align: center;
  }
  
  .ganha-ganha-content {
    flex-direction: column;
    text-align: center;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .comecar-agora-title {
    font-size: 2rem;
  }
}